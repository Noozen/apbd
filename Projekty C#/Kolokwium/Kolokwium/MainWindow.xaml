<Window x:Class="Kolokwium.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kolokwium"
        mc:Ignorable="d"
        Title="Animals" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="40"/>
            <RowDefinition Height="10*" MinHeight="40"/>
            <RowDefinition Height="*" MinHeight="40"/>
        </Grid.RowDefinitions>
        <Label Content="Animals" Grid.Row="0" FontSize="24">

        </Label>
        <DataGrid ColumnWidth="*" Name="DataGrid" Grid.Row="1">
        </DataGrid>
        <Button Grid.Row="2" Grid.Column="0" Click="Button_Click">Add animal</Button>
    </Grid>
</Window>
