<Window x:Class="Cwiczenia3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cwiczenia3"
        mc:Ignorable="d"
        Title="Zadanie1" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Background="Red" Click="Zadanie2Click">Zadanie 2</Button>
        <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="4" Background="Black"></Button>
        <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="1" Background="Yellow" Click="Zadanie3i4Click">Zadanie 3 i 4</Button>
        <Button Grid.Row="2" Grid.Column="2" Grid.RowSpan="2" Background="Blue"></Button>
        
    </Grid>
</Window>
